{
  "private": true,
  "name": "kspackage",
  "description": "Modern mod manager for Kerbal Space Program",
  "version": "1.0.0",
  "author": "Til Blechschmidt <til@blechschmidt.de>",
  "main": "app/background.js",
  "build": {
    "appId": "de.blechschmidt.kspackage",
    "productName": "KSPackage",
    "copyright": "Copyright Â© 2019 Til Blechschmidt",
    "directories": {
      "output": "dist",
      "buildResources": "resources"
    },
    "publish": null
  },
  "scripts": {
    "dev": "BLUEBIRD_W_FORGOTTEN_RETURN=0 node nextron/nextron.js",
    "build": "node nextron/nextron.js build"
  },
  "dependencies": {
    "@material-ui/core": "3.9.2",
    "@material-ui/icons": "^3.0.2",
    "electron-promise-ipc": "^1.1.0",
    "fs-jetpack": "^2.2.2",
    "interweave": "^10.1.3",
    "jss": "^9.8.7",
    "next": "8.0.3",
    "prop-types": "^15.7.2",
    "react": "^16.8.5",
    "react-dom": "^16.8.5",
    "react-jss": "^8.6.1",
    "react-virtualized-auto-sizer": "^1.0.2",
    "react-window": "^1.7.1"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-transform-react-jsx": "^7.3.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-flow": "^7.0.0",
    "arg": "^4.1.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "chalk": "^2.4.2",
    "electron": "4.1.1",
    "electron-builder": "20.39.0",
    "eslint": "^5.15.3",
    "eslint-plugin-react": "^7.12.4",
    "fast-glob": "^2.2.6",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "fs-extra": "^7.0.1",
    "node-npx": "^1.3.1",
    "ora": "^3.2.0",
    "webpack": "4.29.0",
    "webpack-merge": "^4.2.1"
  },
  "prettier": {
    "useTabs": true,
    "semi": false,
    "singleQuote": false,
    "bracketSpacing": true,
    "trailingComma": "es5",
    "printWidth": 160
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "env": {
      "es6": true,
      "node": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "sourceType": "module"
    },
    "plugins": [
      "react"
    ],
    "rules": {
      "no-console": 1,
      "arrow-parens": 0,
      "quotes": [
        "error",
        "single"
      ],
      "indent": [
        "error",
        "tab",
        {
          "SwitchCase": 1
        }
      ],
      "comma-dangle": "error"
    }
  }
}
